{
    "require": {
        "php": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "PHPOOP\\": "src"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5"
    },
    "scripts": {
        "phpcs": "bin/phpcs --standard=PSR2 ./src",
        "phpcbf": "bin/phpcbf --standard=PSR2 ./src"
    }
}
